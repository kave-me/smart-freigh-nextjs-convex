# Application URL
NEXT_PUBLIC_APP_URL=https://smartfreight.example.com

# Convex Deployment (used by 'npx convex dev')
CONVEX_DEPLOYMENT=dev:your-deployment-id # team: your-team, project: your-project

# Convex API URL (from your Convex dashboard)
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-id.convex.cloud

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_publishable_key
CLERK_SECRET_KEY=your_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-instance.clerk.accounts.dev

